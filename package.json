  },
  "homepage": "https://github.com/ianlavapiez/node-api-clean-architecture#readme",
  "devDependencies": {
    "husky": "^4.2.5",
    "jest": "^25.5.4",
    "lint-staged": "^10.2.2",
    "standard": "^14.3.3"
  },
  "dependencies": {
    "bcrypt": "^4.0.1",
    "express": "^4.17.1",
    "mongoose": "^5.9.11",
